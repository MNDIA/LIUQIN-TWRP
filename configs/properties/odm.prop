# Audio
vendor.audio.hdr.record.enable=false

# Bluetooth
bluetooth.device.default_name=Xiaomi Pad 6 Pro

# Display
persist.sys.sf.color_mode=0
ro.surface_flinger.set_idle_timer_ms=1500
ro.surface_flinger.set_touch_timer_ms=1500
ro.surface_flinger.set_display_power_timer_ms=1000
ro.surface_flinger.use_content_detection_for_refresh_rate=true

# Display Orientation
ro.surface_flinger.primary_display_orientation=ORIENTATION_0
debug.sf.ignore_hwc_physical_display_orientation=true
ro.bootanim.set_orientation_4630947141052476290=ORIENTATION_90
ro.bootanim.set_orientation_4630947200012256898=ORIENTATION_90

# Sensors
persist.vendor.sensors.enable.mag_filter=true

# SPU
vendor.gatekeeper.disable_spu=true

# USB
vendor.usb.product_string=Xiaomi Pad 6 Pro
